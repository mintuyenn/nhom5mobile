<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_margin="8dp"
    android:background="@drawable/bg_message_circle_blue"
    android:elevation="4dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">


        <ImageView
            android:id="@+id/imgButterflyTopLeft"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/buom"
            android:layout_gravity="top|end"
            android:alpha="0.7" />


        <ImageView
            android:id="@+id/imgButterflyBottomRight"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/buom"
            android:layout_gravity="bottom|end"
            android:alpha="0.7" />
        <ImageView
            android:id="@+id/imgButterflyTopLeftt"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/buom"
            android:layout_gravity="top|start"
            android:alpha="0.7" />


        <ImageView
            android:id="@+id/imgButterflyBottomLeft"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/buom"
            android:layout_gravity="bottom|start"
            android:alpha="0.7" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imgSanPham"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="12dp"
                android:layout_gravity="center"
                android:background="#EEEEEE"
                android:contentDescription="Ảnh sản phẩm"
                android:scaleType="centerCrop"
                android:src="@drawable/banhmi" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTenSanPham"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên sản phẩm: Bánh mì"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSoLuong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Số lượng: 2"
                    android:textColor="#444444"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDonGia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Đơn giá: 1.800.000đ"
                    android:textColor="#444444"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
