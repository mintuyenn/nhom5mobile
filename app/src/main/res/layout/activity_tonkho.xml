<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3E0">

    <!-- Tiêu đề chính -->
    <TextView
        android:id="@+id/tvTieuDe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QUẢN LÝ TỒN KHO"
        android:layout_marginTop="60dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#BF360C"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <!-- Tiêu đề thống kê -->
    <TextView
        android:id="@+id/tvTongSanPham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="📦 Tổng sản phẩm: 0"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#D84315"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tvTongSoLuong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="📊 Tổng số lượng còn lại: 0"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#388E3C"
        android:layout_marginBottom="12dp" />

    <!-- Bộ lọc loại hàng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🔎 Chọn loại hàng:"
            android:textSize="16sp"
            android:textColor="#5D4037"
            android:layout_marginEnd="8dp" />

        <Spinner
            android:id="@+id/spinnerLoaiHang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:spinnerMode="dropdown"
            android:background="@android:drawable/btn_dropdown" />
    </LinearLayout>

    <!-- Danh sách sản phẩm -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTonKho"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="24dp" />
</LinearLayout>
