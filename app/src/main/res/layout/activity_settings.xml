<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8E1"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cài đặt ứng dụng"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:textColor="#5D4037"
            android:paddingBottom="24dp"/>

        <!-- Dark Mode Switch -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chế độ giao diện (Sáng/Tối)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#6D4C41"
            android:paddingBottom="12dp" />

        <Switch
            android:id="@+id/switchDarkMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bật chế độ tối"
            android:textSize="18sp"
            android:textColor="#4E342E"
            android:paddingBottom="24dp" />

        <!-- Backup Button -->
        <Button
            android:id="@+id/btnBackup"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Sao lưu dữ liệu"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF7043"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:letterSpacing="0.05" />

        <!-- Restore Button -->
        <Button
            android:id="@+id/btnRestore"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Phục hồi dữ liệu"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF8A65"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:letterSpacing="0.05" />

        <!-- About Button -->
        <Button
            android:id="@+id/btnAbout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Giới thiệu app"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF5722"
            android:elevation="4dp"
            android:letterSpacing="0.05" />
    </LinearLayout>
</ScrollView>
