<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_margin="8dp"
    android:background="@drawable/bg_sanpham_card"
    android:elevation="4dp">

    <!-- Các thông tin như trước -->
    <!-- Mã đơn hàng -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/tvDonHangIdLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã đơn hàng: "
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvDonHangId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#12345"
            android:textSize="16sp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Tên khách hàng -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/tvTenKhachHangLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khách hàng: "
            android:textStyle="bold"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvTenKhachHang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyễn Văn A"
            android:textSize="14sp"
            android:textColor="#333333"
            android:textStyle="italic" />
    </LinearLayout>

    <!-- Ngày lập -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/tvNgayLapLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày lập: "
            android:textStyle="bold"
            android:textColor="#444444"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvNgayLap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024-06-27"
            android:textSize="14sp"
            android:textColor="#444444" />
    </LinearLayout>

    <!-- Tổng tiền -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/tvTongTienLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng tiền: "
            android:textStyle="bold"
            android:textColor="#444444"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvTongTien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.500.000đ"
            android:textSize="14sp"
            android:textColor="#444444" />
    </LinearLayout>

    <!-- Trạng thái -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tvTrangThaiLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trạng thái: "
            android:textStyle="bold"
            android:textColor="#007BFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvTrangThai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đang xử lý"
            android:textSize="14sp"
            android:textColor="#007BFF"
            android:textStyle="italic" />
    </LinearLayout>

    <!-- Nút Sửa và Xóa -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">

        <Button
            android:id="@+id/btnSua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sửa"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnXoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xóa"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>
