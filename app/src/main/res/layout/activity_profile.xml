<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF0F5">  <!-- màu hồng nhạt nền -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Avatar với bo tròn và shadow -->
        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_person"
            android:background="@drawable/bg_container"
            android:layout_marginBottom="12dp" />

        <!-- Button chọn ảnh bo góc -->
        <Button
            android:id="@+id/btnSelectImage"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Chọn ảnh đại diện"
            android:background="@drawable/bg_container"
            android:textColor="#fff"
            android:layout_marginBottom="16dp"/>

        <!-- EditText với background bo góc và padding -->
        <EditText
            android:id="@+id/edtName"
            android:hint="Họ tên"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="12dp"
            android:background="@drawable/bg_container"
            android:textColor="#333"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/edtPhone"
            android:hint="SĐT"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="12dp"
            android:background="@drawable/bg_container"
            android:textColor="#333"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/edtAddress"
            android:hint="Địa chỉ"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="12dp"
            android:background="@drawable/bg_container"
            android:textColor="#333"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/edtOldPassword"
            android:hint="Mật khẩu cũ"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="12dp"
            android:background="@drawable/bg_edittext"
            android:textColor="#333"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/edtNewPassword"
            android:hint="Mật khẩu mới"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="12dp"
            android:background="@drawable/bg_edittext"
            android:textColor="#333"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Cập nhật thông tin"
            android:background="@drawable/bg_sanpham_card"
            android:textColor="#fff"
            android:textSize="18sp"/>

    </LinearLayout>
</ScrollView>
