<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_margin="10dp"
    android:background="@drawable/bg_sanpham_card"
    android:elevation="4dp">

    <!-- Hình ảnh sản phẩm -->
    <ImageView
        android:id="@+id/imgSanPham"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        android:background="@drawable/bg_rounded_image"
        android:padding="4dp" />

    <!-- Tên sản phẩm -->
    <TextView
        android:id="@+id/tvTenSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imgSanPham"
        android:layout_marginStart="12dp"
        android:text="🍰 Tên sản phẩm"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#C2185B" />

    <!-- Giá -->
    <TextView
        android:id="@+id/tvGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTenSP"
        android:layout_toEndOf="@id/imgSanPham"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:text="💵 Giá: 100.000đ"
        android:textColor="#3F51B5"
        android:textSize="16sp" />

    <!-- Số lượng -->
    <TextView
        android:id="@+id/tvSoLuong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvGia"
        android:layout_toEndOf="@id/imgSanPham"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:text="🔢 Số lượng: 10"
        android:textColor="#388E3C"
        android:textSize="16sp" />

    <!-- Nút sửa -->
    <Button
        android:id="@+id/btnSua"
        android:layout_width="80dp"
        android:layout_height="38dp"
        android:text="Sửa"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#64B5F6"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_alignTop="@id/tvTenSP" />

    <!-- Nút xóa -->
    <Button
        android:id="@+id/btnXoa"
        android:layout_width="80dp"
        android:layout_height="38dp"
        android:text="Xóa"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#EF5350"
        android:layout_below="@id/btnSua"
        android:layout_alignStart="@id/btnSua"
        android:layout_marginTop="10dp" />
</RelativeLayout>
