<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFE4E1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ThongKeActivity">

    <!-- Tiêu đề chính -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thống kê doanh thu"
        android:textSize="24sp"
        android:layout_marginTop="30dp"
        android:textColor="@color/purple_500"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Nhãn cho Spinner loại thống kê -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn loại thống kê"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/purple_500"
        android:layout_marginBottom="8dp" />

    <!-- Spinner chọn loại thống kê -->
    <Spinner
        android:id="@+id/spinnerLoaiThongKe"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:spinnerMode="dropdown"
        android:background="@drawable/bg_spinner"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Layout chọn tháng + năm (dùng khi thống kê theo ngày hoặc tháng) -->
    <LinearLayout
        android:id="@+id/layoutMonthYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn tháng và năm"
            android:textSize="16sp"
            android:textColor="@color/purple_500"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Spinner
                android:id="@+id/spinnerMonth"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:spinnerMode="dropdown"
                android:background="@drawable/bg_spinner"
                android:padding="12dp"
                android:layout_marginEnd="8dp" />

            <Spinner
                android:id="@+id/spinnerYearForMonth"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:spinnerMode="dropdown"
                android:background="@drawable/bg_spinner"
                android:padding="12dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Layout chọn năm (dùng khi thống kê theo năm) -->
    <LinearLayout
        android:id="@+id/layoutYearOnly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn năm"
            android:textSize="16sp"
            android:textColor="@color/purple_500"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerYearOnly"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:spinnerMode="dropdown"
            android:background="@drawable/bg_spinner"
            android:padding="12dp" />
    </LinearLayout>

    <!-- BarChart chiếm hết phần còn lại -->
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="20dp" />

</LinearLayout>
