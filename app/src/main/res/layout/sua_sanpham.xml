<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF3F6"
    android:padding="24dp"
    android:layout_margin="16dp"
    android:elevation="6dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:clipToPadding="false">

        <!-- 🌟 Tiêu đề -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🛠️ Cập nhật sản phẩm"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#E91E63"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp" />

        <!-- Ảnh sản phẩm -->
        <ImageView
            android:id="@+id/imgSanPham"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_edittext_dethuong"
            android:contentDescription="Ảnh sản phẩm" />

        <!-- Nút chọn ảnh -->
        <Button
            android:id="@+id/btnChonAnh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📸 Chọn ảnh"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF4081"
            android:layout_marginBottom="24dp" />

        <!-- Tên sản phẩm -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🎀 Tên sản phẩm"
            android:textColor="#D81B60"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/edtTenSP"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Nhập tên sản phẩm"
            android:background="@drawable/bg_edittext_dethuong"
            android:paddingHorizontal="16dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Số lượng -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🍭 Số lượng"
            android:textColor="#00897B"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/edtSoLuong"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Nhập số lượng"
            android:inputType="number"
            android:background="@drawable/bg_edittext_dethuong"
            android:paddingHorizontal="16dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Giá -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="💰 Giá"
            android:textColor="#5E35B1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/edtGia"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Nhập giá sản phẩm"
            android:inputType="numberDecimal"
            android:background="@drawable/bg_edittext_dethuong"
            android:paddingHorizontal="16dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />
    </LinearLayout>
</ScrollView>
