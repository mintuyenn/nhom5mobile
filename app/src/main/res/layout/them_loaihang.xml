<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bogoc"
    android:gravity="center_horizontal">

    <!-- Tiêu đề chính -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🛍️ Tạo loại hàng mới"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#D81B60"
        android:layout_marginBottom="4dp" />

    <!-- Phụ đề 1 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="📌 Giúp bạn dễ quản lý sản phẩm hơn!"
        android:textSize="14sp"
        android:textColor="#757575"
        android:layout_marginBottom="16dp" />

    <!-- Tiêu đề nhập -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="✏️ Nhập tên loại hàng"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#4A148C"
        android:layout_marginBottom="8dp" />

    <!-- Ô nhập tên loại -->
    <EditText
        android:id="@+id/edtTenLoai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ví dụ: Đồ ăn, Nước uống, Gia vị..."
        android:background="@drawable/bg_edittext"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <!-- Phụ đề cuối -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🎉 Gợi ý: Đặt tên ngắn gọn và dễ nhớ nhé!"
        android:textSize="13sp"
        android:textColor="#009688"
        android:layout_marginTop="16dp" />

</LinearLayout>
